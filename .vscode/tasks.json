{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lint & Format Check",
            "type": "shell",
            "command": "uv run ruff check src/ tests/ && uv run ruff format --check src/ tests/",
            "group": "test",
            "problemMatcher": [
                "$ruff"
            ]
        },
        {
            "label": "Type Check",
            "type": "shell",
            "command": "uv run mypy src/",
            "group": "test",
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "Fix All (Format & Lint)",
            "type": "shell",
            "command": "uv run ruff check --fix src/ tests/ && uv run ruff format src/ tests/",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "uv run pytest tests/",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Run App",
            "type": "shell",
            "command": "uv run face-recognize run",
            "group": "test",
            "problemMatcher": []
        }
    ]
}